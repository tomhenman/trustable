# =============================================================================
# Trustable Environment Configuration
# =============================================================================
# Copy this file to .env and fill in the values.
# Never commit .env to version control.
#
# Legend:
#   [REQUIRED] - Must be set for the application to work
#   [OPTIONAL] - Can be omitted; feature will be disabled
#   [AUTO]     - Auto-set in Supabase hosted environment
# =============================================================================

# =============================================================================
# SUPABASE [REQUIRED]
# =============================================================================

# [AUTO] Supabase project URL
# For local: http://localhost:54321
# For hosted: https://YOUR_PROJECT.supabase.co
SUPABASE_URL=http://localhost:54321

# [AUTO] Supabase anonymous key (safe for frontend)
# Get from: Supabase Dashboard > Settings > API
SUPABASE_ANON_KEY=your-anon-key

# [REQUIRED] Supabase service role key (server-side only, NEVER expose to frontend)
# Get from: Supabase Dashboard > Settings > API
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# =============================================================================
# AI PLATFORMS [REQUIRED - At least one]
# =============================================================================

# [REQUIRED] OpenAI API Key - For ChatGPT queries and agent
# Get from: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-proj-xxx

# [OPTIONAL] Anthropic API Key - For Claude queries
# Get from: https://console.anthropic.com/
ANTHROPIC_API_KEY=sk-ant-xxx

# [OPTIONAL] Perplexity API Key - For Perplexity AI queries
# Get from: https://www.perplexity.ai/settings/api
PERPLEXITY_API_KEY=pplx-xxx

# [OPTIONAL] Google AI API Key - For Gemini queries
# Get from: https://makersuite.google.com/app/apikey
GOOGLE_AI_API_KEY=xxx

# =============================================================================
# EMAIL [OPTIONAL - Required for digests and alerts]
# =============================================================================

# [OPTIONAL] Resend API Key - For transactional email
# Get from: https://resend.com/api-keys
RESEND_API_KEY=re_xxx

# [OPTIONAL] Email sender configuration
EMAIL_FROM_ADDRESS=notifications@yourdomain.com
EMAIL_FROM_NAME=Trustable

# =============================================================================
# SMS [OPTIONAL - Required for SMS alerts]
# =============================================================================

# [OPTIONAL] Twilio credentials - For SMS alerts
# Get from: https://console.twilio.com/
TWILIO_ACCOUNT_SID=ACxxx
TWILIO_AUTH_TOKEN=xxx
TWILIO_PHONE_NUMBER=+1xxx

# =============================================================================
# WEBHOOKS [OPTIONAL]
# =============================================================================

# [OPTIONAL] Secret for signing outbound webhooks
# Generate with: openssl rand -hex 32
WEBHOOK_SECRET=your-webhook-signing-secret

# =============================================================================
# APPLICATION [OPTIONAL]
# =============================================================================

# [OPTIONAL] Environment name
NODE_ENV=development

# [OPTIONAL] Base URL for generating links in emails
APP_BASE_URL=http://localhost:3000

# [OPTIONAL] Rate limiting
RATE_LIMIT_REQUESTS_PER_MINUTE=60

# =============================================================================
# BACKGROUND WORKERS [OPTIONAL]
# =============================================================================

# [OPTIONAL] Scan runner settings
SCAN_CONCURRENCY=5
SCAN_RETRY_ATTEMPTS=3
SCAN_RETRY_DELAY_MS=5000

# [OPTIONAL] Score calculation batch size
SCORE_CALC_BATCH_SIZE=50

# [OPTIONAL] Digest generation settings
DIGEST_SEND_HOUR=9
DIGEST_TIMEZONE=UTC

# =============================================================================
# MONITORING [OPTIONAL]
# =============================================================================

# [OPTIONAL] Sentry DSN - For error tracking
# Get from: https://sentry.io/
SENTRY_DSN=https://xxx@sentry.io/xxx

# =============================================================================
# LOCAL DEVELOPMENT ONLY
# =============================================================================

# [LOCAL ONLY] Database URL for docker-compose (not needed for Supabase)
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/trustable

# [LOCAL ONLY] Redis URL for docker-compose (not needed for Supabase)
REDIS_URL=redis://localhost:6379
